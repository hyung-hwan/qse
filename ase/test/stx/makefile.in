CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/xp/bas -L@abs_top_builddir@/xp/stx
LIBS = @LIBS@ -lxpstx -lxpbas

all: stx parser

stx: stx.o
	$(CC) $(LDFLAGS) -o $@ $< $(LIBS)

parser: parser.o
	$(CC) $(LDFLAGS) -o $@ $< $(LIBS)

clean:
	rm -rf $(OUTS) *.o

.SUFFIXES: .c .o
.c.o:
	$(CC) $(CFLAGS) -c $<
