CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/.. 
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/@BUILDMODE@/lib
LIBS = @LIBS@ -laselsp -lasecmn -laseutl -lm
MODE = @BUILDMODE@

OUT_DIR = ../../$(MODE)/bin

all: $(OUT_DIR)/aselsp 

$(OUT_DIR)/aselsp: $(OUT_DIR)
	$(CC) $(CFLAGS) -o $@ lsp.c $(LDFLAGS) $(LIBS)

$(OUT_DIR):
	mkdir -p $(OUT_DIR)

clean:
	rm -rf $(OUT_DIR)/aselsp 

