SRCS = awk.c
OUTS = $(SRCS:.c=.x)

CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/.. -I$(XPKIT)
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/awk -L$(XPKIT)/xp/bas
LIBS = @LIBS@ -lsseawk -lxpbas -lm

all: $(OUTS)

clean:
	rm -rf $(OUTS) *.o

.SUFFIXES: .c .x
.c.x:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LIBS)
