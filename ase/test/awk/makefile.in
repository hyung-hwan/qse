
CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/.. 
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/cmn -L@abs_top_builddir@/awk -L@abs_top_builddir@/utl 
LIBS = @LIBS@ -laseawk -lasecmn -laseutl -lm

all: aseawk mini

aseawk: awk.o
	$(CC) -o $@ awk.o $(LDFLAGS) $(LIBS)

mini: mini.o
	$(CC) -o $@ mini.o $(LDFLAGS) $(LIBS)

clean:
	rm -rf *.o aseawk mini

.SUFFIXES: .c .o
.c.o:
	$(CC) -c $(CFLAGS) $<
