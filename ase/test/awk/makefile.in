SRCS = awk.c
OBJS = $(SRCS:.c=.o)

CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/.. 
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/awk -L@abs_top_builddir@/utl 
LIBS = @LIBS@ -laseawk -laseutl -lm

all: aseawk

aseawk: $(OBJS)
	$(CC) -o $@ awk.o $(LDFLAGS) $(LIBS)

clean:
	rm -rf *.o aseawk

.SUFFIXES: .c .o
.c.o:
	$(CC) -c $(CFLAGS) $<
