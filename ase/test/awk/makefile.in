SRCS = awk.c
OUTS = $(SRCS:.c=.x)

CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/xp/bas -L@abs_top_builddir@/xp/awk
LIBS = @LIBS@ -lxpawk -lxpbas -lm

all: $(OUTS)

clean:
	rm -rf $(OUTS) *.o

.SUFFIXES: .c .x
.c.x:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LIBS)
