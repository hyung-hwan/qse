SRCS = awk.c
OBJS = $(SRCS:.c=.o)

CC = @CC@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/.. -I$(XPKIT)
LDFLAGS = @LDFLAGS@ -L@abs_top_builddir@/awk -L$(XPKIT)/xp/bas
LIBS = @LIBS@ -laseawk -lxpbas -lm

all: awk

awk: $(OBJS)
	$(CC) -o $@ awk.o $(LDFLAGS) $(LIBS)

clean:
	rm -rf *.o awk

.SUFFIXES: .c .o
.c.o:
	$(CC) -c $(CFLAGS) $<
