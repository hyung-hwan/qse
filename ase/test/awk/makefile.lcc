CC = lcc
CFLAGS = -I../../.. -A -ansic -libcdll -D__STAND_ALONE
#LDFLAGS = -subsystem console -dynamic -s
LDFLAGS = -subsystem console -s -L../../../xp/awk -L../../../xp/bas
LIBS = xpbas.lib xpawk.lib

all: awk 

awk: awk.obj
	lcclnk $(LDFLAGS) -o awk.exe awk.obj $(LIBS)

clean:
	del $(OBJS) *.obj $(OUT)

.SUFFIXES: .c .obj
.c.obj:
	$(CC) $(CFLAGS) -c $< 

