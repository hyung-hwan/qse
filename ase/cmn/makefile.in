NAME = asecmn

CC = @CC@
AR = ar
MAKE = @MAKE@
RANLIB = @RANLIB@
CFLAGS = @CFLAGS@ -I@abs_top_builddir@/..
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
MODE = @BUILDMODE@

OUT_DIR = ../$(MODE)/lib
OUT_FILE = $(OUT_DIR)/lib$(NAME).a

TMP_DIR = $(MODE)

OBJ_FILES = \
	$(TMP_DIR)/mem.o \
	$(TMP_DIR)/str.o \
	$(TMP_DIR)/map.o \
	$(TMP_DIR)/misc.o 

lib: $(OUT_FILE)

$(OUT_FILE): $(TMP_DIR) $(OBJ_FILES) $(OUT_DIR)
	$(AR) cr $(OUT_FILE) $(OBJ_FILES)
	if [ "$(RANLIB)" = "ranlib" ]; then ranlib $(OUT_FILE); fi
	
$(TMP_DIR)/mem.o: mem.c
	$(CC) $(CFLAGS) -o $@ -c mem.c

$(TMP_DIR)/str.o: str.c
	$(CC) $(CFLAGS) -o $@ -c str.c

$(TMP_DIR)/map.o: map.c
	$(CC) $(CFLAGS) -o $@ -c map.c

$(TMP_DIR)/misc.o: misc.c
	$(CC) $(CFLAGS) -o $@ -c misc.c

$(OUT_DIR):
	mkdir -p $(OUT_DIR)

$(TMP_DIR):
	mkdir -p $(TMP_DIR)

clean:
	rm -rf $(OUT_FILE) $(OBJ_FILES)

