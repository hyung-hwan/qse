<project name="ase" default="compile" basedir=".">
	<description>
		ASE build file
	</description>

	<property name="awkdir" location="awk" />
	<property name="testawkdir" location="test/awk" />

	<property name="destdir" location=".." />

	<target name="compile" description="compile the source code">
		<javac srcdir="${awkdir}" destdir="${destdir}" />
		<javac srcdir="${testawkdir}" destdir="${destdir}" />
	</target>

	<target name="clean" description="clean up">
		<delete>
			<fileset dir="." includes="**/*.class" />
		</delete>
	</target>

</project>
