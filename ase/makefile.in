BLDDIRS = lib 
MODE = @BUILDMODE@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

all: build

build:
	@for i in $(BLDDIRS); \
	do \
		if [ ! -d $$i ]; \
		then \
			echo Error: $$i not a directory; \
			exit 1; \
		fi; \
		saved=`pwd`; cd "$$i"; \
		if make;  \
		then \
			echo > /dev/null; \
		else \
			exit 1; \
			fi; \
		cd "$$saved"; \
	done

clean:
	@for i in $(BLDDIRS); \
	do \
		if [ ! -d $$i ]; \
		then \
			echo Error: $$i not a directory; \
			exit 1; \
		fi; \
		saved=`pwd`; cd "$$i"; \
		if make $@;  \
		then \
			echo > /dev/null; \
		else \
			exit 1; \
			fi; \
		cd "$$saved"; \
	done
