BLDDIRS = cmn utl awk
MODE = @BUILDMODE@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

all: build

build:
	@for i in $(BLDDIRS); \
	do \
		saved=`pwd`; cd "$$i" || exit 1; \
		make || exit 1; \
		cd "$$saved"; \
	done

clean:
	@for i in $(BLDDIRS); \
	do \
		saved=`pwd`; cd "$$i" || exit 1; \
		make $@ || exit 1; \
		cd "$$saved"; \
	done
